<div class="container">
  <h1>Login</h1>

  <% if flash.any? %>
    <% flash.each do |ix, f_obj| %>
      <%= f_obj %>
    <% end %>
  <% end %>

  <%= form_tag("/login", class: '') do %>
    <div class="form-group">
      <%= label_tag(:email)  %>
      <%= email_field_tag :email, nil, class: 'form-control'  %>
    </div>
    <div class="form-group">
      <%= label_tag(:password) %>
      <%= password_field_tag(:password, nil, class: 'form-control') %>
    </div>

    <%= submit_tag "Login in", class: 'btn btn-success' %>
    <%= link_to "Sign Up", new_user_path, class: 'btn btn-warning' %>
  <% end %>


</div>